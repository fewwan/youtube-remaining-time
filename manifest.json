{
    "manifest_version": 3,
    "name": "YouTube Remaining Time",
    "version": "1.0",
    "description": "Displays the remaining time of YouTube videos besides the normal time.",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon/16.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    }
}
  